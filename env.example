# Django core settings
SECRET_KEY=your-secret-key
DEBUG=True
ALLOWED_HOSTS=127.0.0.1,localhost
CSRF_TRUSTED_ORIGINS=http://127.0.0.1,http://localhost
SITE_ID=1
ACCOUNT_EMAIL_VERIFICATION=mandatory

# Database connection
DATABASE_URL=postgres://user:password@host:5432/dbname

# Cloudinary configuration for media uploads
CLOUDINARY_URL=cloudinary://api_key:api_secret@cloud_name

# Email configuration (SMTP)
# This is the sender address shown in outgoing emails
DEFAULT_FROM_EMAIL=The Elysium Archive <no-reply@example.com>

# This is the inbox that receives contact form messages
CONTACT_RECIPIENT_EMAIL=elysiumarchive@outlook.com

EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=apikey
EMAIL_HOST_PASSWORD=your-sendgrid-api-key

# Stripe keys for test mode
STRIPE_PUBLIC_KEY=pk_test_xxx
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WH_SECRET=whsec_xxx
